- name: copy zabbix agent images
  copy:
    src: '{{ item.src }}'
    dest: '{{ item.dest }}'
  with_items:
  - { src: 'file/zabbix_agent_imgs.tar', dest: '{{ path }}' }
  run_once: true

- name: load zabbix agent images
  docker_image:
    load_path: '{{ path }}/{{ item }}'
    name: zabbix-agent
    timeout: 600
  with_items:
  - zabbix_agent_imgs.tar
  run_once: true
  
- name: generate zabbix agent env
  template:
    src: '{{ item.src }}'
    dest: '{{ item.dest }}'
  with_items:
  - { src: 'template/agent.j2', dest: '{{ path }}/agent.env' }
  
- name: run zabbix-agent
  docker_container:
    name: zabbix-agent
    image: docker.io/zabbix/zabbix-agent:ubuntu-3.4.4
    restart: always
    env:
      PHP_TZ: '{{ PHP_TZ }}'
      ZBX_SERVER_HOST: '{{ ZBX_SERVER_HOST }}'
    network_mode: host
    volumes:
    - /:/hostdisk